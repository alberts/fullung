<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:util="http://www.springframework.org/schema/util"
  xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
        http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">
  <description>GridGain configuration</description>
  <bean id="compoundNameProperties" class="java.util.Properties" />
  <bean id="mqConnectionFactory" class="com.sun.messaging.ConnectionFactory" />
  <bean id="mqDiscoveryTopic" class="com.sun.messaging.Topic">
    <constructor-arg value="ggdisco" />
  </bean>
  <bean id="mqCommunicationTopic" class="com.sun.messaging.Topic">
    <constructor-arg value="ggcomm" />
  </bean>
  <util:map id="jmsJndiEnvironment">
    <entry>
      <key>
        <util:constant static-field="javax.naming.Context.INITIAL_CONTEXT_FACTORY" />
      </key>
      <value>org.osjava.sj.memory.MemoryContextFactory</value>
    </entry>
    <entry value-ref="mqConnectionFactory">
      <key>
        <bean class="javax.naming.CompoundName">
          <constructor-arg value="connectionFactory" />
          <constructor-arg ref="compoundNameProperties" />
        </bean>
      </key>
    </entry>
    <entry value-ref="mqCommunicationTopic">
      <key>
        <bean class="javax.naming.CompoundName">
          <constructor-arg value="communicationTopic" />
          <constructor-arg ref="compoundNameProperties" />
        </bean>
      </key>
    </entry>
    <entry value-ref="mqDiscoveryTopic">
      <key>
        <bean class="javax.naming.CompoundName">
          <constructor-arg value="discoveryTopic" />
          <constructor-arg ref="compoundNameProperties" />
        </bean>
      </key>
    </entry>
    <entry key="connectionFactory" value-ref="mqConnectionFactory" />
    <entry key="discoveryTopic" value-ref="mqDiscoveryTopic" />
    <entry key="communicationTopic" value-ref="mqCommunicationTopic" />
  </util:map>
  <bean id="grid" class="org.gridgain.grid.GridConfigurationAdapter" scope="singleton">
    <property name="peerClassLoadingEnabled" value="true" />
    <property name="executorService">
      <bean class="java.util.concurrent.ThreadPoolExecutor">
        <constructor-arg type="int" value="1" />
        <constructor-arg type="int" value="1" />
        <constructor-arg type="long">
          <util:constant static-field="java.lang.Long.MAX_VALUE" />
        </constructor-arg>
        <constructor-arg type="java.util.concurrent.TimeUnit">
          <util:constant static-field="java.util.concurrent.TimeUnit.SECONDS" />
        </constructor-arg>
        <constructor-arg type="java.util.concurrent.BlockingQueue">
          <bean class="java.util.concurrent.LinkedBlockingQueue" />
        </constructor-arg>
      </bean>
    </property>
    <property name="communicationSpi">
      <bean class="org.gridgain.grid.spi.communication.jms.GridJmsCommunicationSpi">
        <property name="connectionFactoryName" value="connectionFactory" />
        <property name="topicName" value="communicationTopic" />
        <property name="jndiEnvironment" ref="jmsJndiEnvironment" />
      </bean>
    </property>
    <property name="discoverySpi">
      <bean class="org.gridgain.grid.spi.discovery.jms.GridJmsDiscoverySpi">
        <property name="connectionFactoryName" value="connectionFactory" />
        <property name="topicName" value="discoveryTopic" />
        <property name="jndiEnvironment" ref="jmsJndiEnvironment" />
      </bean>
    </property>
  </bean>
</beans>
